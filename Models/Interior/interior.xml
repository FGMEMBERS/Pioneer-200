<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>sieges</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intverriere</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Pioneer-200/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.826 </x-m>
      <y-m> -0.237 </y-m>
      <z-m> -0.108 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Pioneer-200/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.400 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.230 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>inttourverriere</object-name>
    <object-name>intverriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 50 </factor>
    <center>
      <x-m> -1.548 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.355 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

